doctype html
html(lang='ja')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, shrink-to-fit=yes')
    title CRUEL REASON Official Website
    // library
    link(rel='stylesheet' href='lib/bootstrap-3.3.6-dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='lib/animate.css')
    script(type='text/javascript' src='lib/jquery-1.12.2.min.js')
    //-- 自前ソースは最後に読み込む
    link(rel='stylesheet' href='./index.css')
    // web fonts
    //link(href='https://fonts.googleapis.com/css?family=Codystar:400,300' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Lato:400,100' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Eater' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Merriweather:900' rel='stylesheet' type='text/css')

  body

    //------------------------------------
    // Header
    //------------------------------------
    #header
      #pcmenu.pconly
        .container
          .row
            .col-md-10.col-md-offset-1
              ul
                li
                  a(href="#info" "data-scroll") Information
                li
                  a(href="#member" "data-scroll") Member
                li
                  a(href="#live" "data-scroll") Live Schedule
                li
                  a(href="#ticket" "data-scroll") Ticket
                li
                  a(href="#contact" "data-scroll") Contact
      .mobileonly.pull-right
        a.dropdown-toggle#open-mobilemenu(href="#mobilemenu")
          span.menubutton.glyphicon.glyphicon-menu-down
        #mobilemenu
          #closebutton.text-right
            a.close-mobilemenu(href="#")
              span.menubutton.glyphicon.glyphicon-remove-circle
          ul
            a.close-mobilemenu(href="#info")
              li Information
            a.close-mobilemenu(href="#member")
              li Member
            a.close-mobilemenu(href="#live")
              li Live Schedule
            a.close-mobilemenu(href="#ticket")
              li Ticket
            a.close-mobilemenu(href="#contact")
              li Contact

    //------------------------------------
    // Contents
    //------------------------------------
    #contents
      .photoview
        img.maxwidth(src="http://placehold.jp/1280x720.png")
      .container
        .row
          .col-md-12


    //------------------------------------
    // Movie
    //------------------------------------
    #movie
      .container
        .row
          .col-md-12
            iframe(width="560" height="315" src="https://www.youtube.com/embed/GgZgLddpy3I?rel=0" frameborder="0" allowfullscreen style="width:100%")

    //------------------------------------
    // Informatin
    //------------------------------------
    #info
      .container
        .row
          .col-md-12
            h2.text-center Information


    //------------------------------------
    // Member
    //------------------------------------
    #member
      .container
        .row
          .col-md-12
            h2.text-center Member
        .row
          .person.col-md-5
            .hideto
              h3.eater Vocal. hideto
              img(src="http://placehold.jp/320x480.png")
          .person.col-md-5.col-md-offset-2
            .mao
              h3.eater.text-right Guitar. mao
              img.pull-right(src="http://placehold.jp/320x480.png")
        .row
          .person.col-md-5
            .utamaru
              h3.eater Bass. utamaru
              img(src="http://placehold.jp/320x480.png")
          .person.col-md-5.col-md-offset-2
            .yuri
              h3.eater.text-right Drums. yuri
              img.pull-right(src="http://placehold.jp/320x480.png")


    //------------------------------------
    // Live
    //------------------------------------
    #live
      .container
        .row
          .col-md-12
            h2.text-center Live Schedule
        include _live


    //------------------------------------
    // Ticket Reservation
    //------------------------------------
    #ticket
      .container
        .row
          .col-md-12
            h2.text-center Reservation
            p.text-center チケットのご予約はこちら
        .row
          .col-md-8.col-md-offset-2
            .form-wrapper("marginbot-50" style="padding: 0")
              script(type="text/javascript" src="https://form.jotform.me/jsform/60470680579463")


    //------------------------------------
    // Contact
    //------------------------------------
    #contact
      .container
        .row
          .col-md-12
            h2.text-center Contact
            p.text-center お問い合わせは
              a(href="https://form.jotform.me/60530173636451" target="_blank") こちら
              | まで
              br
              | (別Windowが開きます)


    //------------------------------------
    // Footer
    //------------------------------------
    #footer
      .container
        .row
          .col-md-12
            p.text-right &copy;Copyright 2016 CRUEL REASON All rights reserved.


    //------------------------------------
    // JS Library
    //------------------------------------
    script(type='text/javascript' src='lib/bootstrap-3.3.6-dist/js/bootstrap.min.js')
    script(type='text/javascript' src='lib/smooth-scroll-master/dist/js/smooth-scroll.min.js')
    //-- ライブラリ側1行変更コメントアウトしてます
    script(type='text/javascript' src='lib/animatedModal.js-master/animatedModal.js')
    //-- todo sticky-headerどっちか使ってどっちか消す↓
    script(type='text/javascript' src='lib/garand-sticky-9434b1f/jquery.sticky.js')
    script(type='text/javascript' src='lib/sticky-kit.min.js')
    script(type='text/javascript' src='./index.js')
