doctype html
html(lang='ja')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, user-scalable=no, shrink-to-fit=yes')
    title CRUEL REASON Official Website
    // library
    link(rel='stylesheet' href='lib/bootstrap-3.3.6-dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='lib/slick-1.5.9/slick/slick.css')
    link(rel='stylesheet' href='lib/slick-1.5.9/slick/slick-theme.css')
    link(rel='stylesheet' href='lib/animate.css')
    script(type='text/javascript' src='lib/jquery-1.12.2.min.js')
    //-- 自前ソースは最後に読み込む
    link(rel='stylesheet' href='./index.css')
    // web fonts
    link(href='https://fonts.googleapis.com/css?family=Lato:400,100' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Eater' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Merriweather:900' rel='stylesheet' type='text/css')

  body

    #cruelreasonofficialwebsite
      //p CRUEL REASON Official Website

    //------------------------------------
    // Header
    //------------------------------------
    #header
      .container
        .row
          .col-md-12
            .navbar.navbar-fixed-top
              .navbar-header
                button.navbar-toggle(type='button' data-toggle='collapse' data-target='#gnavi')
                  span.menubutton.glyphicon.glyphicon-menu-down
              #gnavi.collapse.navbar-collapse
                ul.menubody.nav.navbar-nav
                  li
                    a(href="#" "data-scroll") Top
                  li
                    a(href="#information" "data-scroll") Information
                  li
                    a(href="#member" "data-scroll") Member
                  li
                    a(href="#live" "data-scroll") Live Schedule
                  li
                    a(href="#ticket" "data-scroll") Ticket
                  li
                    a(href="#contact" "data-scroll") Contact

    //------------------------------------
    // Contents
    //------------------------------------
    #contents
      .photoview.slider
        .contents-image
          img.maxwidth(src="./img/201604/artist1.jpg")
        .contents-image
          img.maxwidth(src="./img/201604/oneman.jpg")
      .container
        .row
          .col-md-12


    //------------------------------------
    // Movie
    //------------------------------------
    #movie
      .container
        .row
          .col-md-6.col-md-offset-3
            iframe(width="560" height="315" src="https://www.youtube.com/embed/GgZgLddpy3I?rel=0" frameborder="0" allowfullscreen style="width:100%")

    //------------------------------------
    // Informatin
    //------------------------------------
    #information
      .container
        .row
          .col-md-12
            h2.text-center Information
        .row
          .col-md-12
            a.twitter-timeline(href="https://twitter.com/cruel_reason" data-widget-id="721699534041026560")


    //------------------------------------
    // Member
    //------------------------------------
    #member
      .container
        .row
          .col-md-12
            h2.text-center Member
        .row
          .person.col-md-5
            .hideto
              a(href="#hideto-profile" data-toggle="modal" data-target="#hideto-profile")
                h3.eater Vocal. hideto
                img.profileimg(src="./img/201604/hideto.jpg")
              #hideto-profile.profile.modal.fade(role="dialog")
                .modal-dialog(role="document")
                  .modal-content
                    .modal-body
                      .closebutton.pull-right
                        span.glyphicon.glyphicon-remove-circle
                      h4 Name
                      p 英人
                      h4 Part
                      p Vocal
                      h4 Birthday
                      p 3/9
                      h4 Blood Type
                      p O
                      h4 Social Links
                      a.tw-link(href="https://twitter.com/gigahideto" target="_blank")
                        img.tw(src="./img/twitter.png")
                        | Twitter

          .person.col-md-5.col-md-offset-2
            .mao
              a(href="#mao-profile" data-toggle="modal" data-target="#mao-profile")
                h3.eater.text-right Guitar. mao
                img.profileimg.pull-right(src="./img/201604/mao.jpg")
              #mao-profile.profile.modal.fade(role="dialog")
                .modal-dialog(role="document")
                  .modal-content
                    .modal-body
                      .closebutton.pull-right
                        span.glyphicon.glyphicon-remove-circle
                      h4 Name
                      p mao
                      h4 Part
                      p Guitar
                      h4 Birthday
                      p 5/4
                      h4 Blood Type
                      p B
                      h4 Social Links
                      a.tw-link(href="https://twitter.com/maonyoro" target="_blank")
                        img.tw(src="./img/twitter.png")
                        | Twitter

        .row
          .person.col-md-5
            .utamaru
              a(href="#utamaru-profile" data-toggle="modal" data-target="#utamaru-profile")
                h3.eater Bass. utamaru
                img.profileimg(src="./img/201604/utamaru.jpg")
              #utamaru-profile.profile.modal.fade(role="dialog")
                .modal-dialog(role="document")
                  .modal-content
                    .modal-body
                      .closebutton.pull-right
                        span.glyphicon.glyphicon-remove-circle
                      h4 Name
                      p うたまる
                      h4 Part
                      p Bass
                      h4 Birthday
                      p 7/23
                      h4 Blood Type
                      p A
                      h4 Social Links
                      a.tw-link(href="https://twitter.com/cruel_utamaru" target="_blank")
                        img.tw(src="./img/twitter.png")
                        | Twitter

          .person.col-md-5.col-md-offset-2
            .yuri
              a(href="#yuri-profile" data-toggle="modal" data-target="#yuri-profile")
                h3.eater.text-right Drums. yuri
                img.profileimg.pull-right(src="./img/201604/yuri.jpg")
              #yuri-profile.profile.modal.fade(role="dialog")
                .modal-dialog(role="document")
                  .modal-content
                    .modal-body
                      .closebutton.pull-right
                        span.glyphicon.glyphicon-remove-circle
                      h4 Name
                      p yuri
                      h4 Part
                      p Drums
                      h4 Birthday
                      p 2/13
                      h4 Blood Type
                      p O
                      h4 Social Links
                      a.tw-link(href="https://twitter.com/tesroayuri" target="_blank")
                        img.tw(src="./img/twitter.png")
                        | Twitter


    //------------------------------------
    // Live
    //------------------------------------
    #live
      .container
        .row
          .col-md-12
            h2.text-center Live Schedule
        include _live


    //------------------------------------
    // Ticket Reservation
    //------------------------------------
    #ticket
      .container
        .row
          .col-md-12
            h2.text-center Ticket Reservation
            a(href="https://form.jotform.me/60470680579463" target="_blank")
              p.text-center チケットのご予約はこちら
            p.text-center (別Windowが開きます)
